<div class="background">  

{% set categorie = "GALA" %}
{% set dossier = "2023" %}

    <article class='article-categorie'>
        <h2><img src="image/upload.svg"></h2>
        <h3>{{categorie}} - {{dossier}}</h3>

        <form method="POST" action="\upload" enctype="multipart/form-data">
            
            <input type="file" accept=".jpg, .jpeg" name="fichier[]" class="boutton" multiple>
            
            <button type="submit" class="boutton" name="ajouter" value="{{categorie}}\{{dossier}}\{{categorie}}-{{dossier}}">Ajouter des image</button>
            <a href="\admin" class="boutton">Annuler</a>
        </form>

    </article>
</div>